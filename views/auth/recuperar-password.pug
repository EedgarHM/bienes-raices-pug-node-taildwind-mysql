extends ../layout/index

block contenido 

    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes 
            span.font-normal Raices
        //getting data from controller
        h2.text-center.text-3xl= pagina

        // Form
        .mt-8.mx-auto.max-w-md 
            .bg-white.py-8.px-4.shadow
                form.space-y-5
                    div    
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Email 
                        input#email.w-full.px-3.py-2.border.border-gray-300.placeholder-gray-400(placeholder="Email" type="email" name="email")

                    div    
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Password 
                        input#password.w-full.px-3.py-2.border.border-gray-300.placeholder-gray-400(placeholder="Password" type="password" name="password")

                    .flex.items-center.justify-between 
                        a.text-gray-500.text-xs(href="/auth/registro") Registrarse
                        a.text-gray-500.text-xs(href="/auth/login") Iniciar Sesion


                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white py-3 font-bold cursor-pointer" type="submit" value="Enviar Email")