extends ../layout/index

block contenido 

    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes 
            span.font-normal Raices
        //getting data from controller
        h2.text-center.text-3xl= pagina

         // comprobando si hay errores de validaciones al enviar los datos del formulario
        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p.uppercase.text-xs.text-center.p-4.mb-1.font-bold.bg-red-900.text-white= error.msg   

        // Form
        .mt-8.mx-auto.max-w-md 
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/login")
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div    
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Email 
                        input#email.w-full.px-3.py-2.border.border-gray-300.placeholder-gray-400(placeholder="Email" type="email" name="email")

                    div    
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Password 
                        input#password.w-full.px-3.py-2.border.border-gray-300.placeholder-gray-400(placeholder="Password" type="password" name="password")

                    .flex.items-center.justify-between 
                        a.text-gray-500.text-xs(href="/auth/registro") Registrarse
                        a.text-gray-500.text-xs(href="/auth/recuperar-password") Recuperar Password

                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white py-3 font-bold cursor-pointer" type="submit" value="Iniciar Sesion")